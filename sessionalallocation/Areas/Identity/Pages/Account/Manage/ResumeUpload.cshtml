@page
@model ResumeUploadModel
@{
    ViewData["Title"] = "Resume Upload";
    ViewData["ActivePage"] = ManageNavPages.ResumeUpload;
}

<style>
    #resumeCheck {
        border: none;
        width: 100%;
    }
</style>

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="custom-file">
                    <input asp-for="Input.File" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose File  (eg: DOCX, PDF)</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Upload</button>
        </form>       
        <br />  
        <form id="download-resume" asp-page="DownloadResume" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Download Resume</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @* Scripting for responsive file uploading actions *@
    <script>$(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
        });</script>
}