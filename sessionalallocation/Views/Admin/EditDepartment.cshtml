@model SessionalAllocation.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="School" class="control-label"></label>
                <select asp-for="School" class="form-control" asp-items="ViewBag.School"></select>
                <span asp-validation-for="School" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentOwner" class="control-label"></label>
                <select asp-for="DepartmentOwner" class="form-control" asp-items="ViewBag.DepartmentOwner"></select>
                <span asp-validation-for="DepartmentOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllDepartments">Back to List</a>
</div>

