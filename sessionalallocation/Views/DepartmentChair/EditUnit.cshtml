@model SessionalAllocation.Models.Unit

@{
    ViewData["Title"] = "Edit Unit";
}

<h1>Edit</h1>

<h4>Unit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UnitCode" class="control-label"></label>
                <input asp-for="UnitCode" class="form-control" readonly/>
                <span asp-validation-for="UnitCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitName" class="control-label"></label>
                <input asp-for="UnitName" class="form-control" readonly/>
                <span asp-validation-for="UnitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" readonly />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitOwner" class="control-label"></label>
                <select asp-for="UnitOwner" class="form-control" asp-items="ViewBag.UnitOwner"></select>
                <span asp-validation-for="UnitOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Units" asp-route-id="@Model.Department">Back to List</a>
</div>

